<head>
  <style>
    .carousel {
      margin-bottom: 0;
      padding: 0 40px 30px;
    }
    /* The controlsy */
    .carousel-control {
      left: -12px;
      height: 40px;
      width: 40px;
      background: none repeat scroll 0 0 #222222;
      border: 4px solid #FFFFFF;
      border-radius: 23px 23px 23px 23px;
      margin-top: 90px;
    }
    .carousel-control.right {
      right: -12px;
    }

    /* The colour of the indicators */
    .carousel-indicators li {
      background: #cecece;
    }
    .carousel-indicators .active {
      background: #428bca;
    }

    .hero a{
      z-index: 999;
      width: 200px;
      height: 200px;
      display: block;
    }

    .module-name {
      margin-top: 45px;
      margin-bottom: 30px;
      color: rgba(0, 0, 0, 0.7);
      text-align: center;
      font-size: 0;
    }
    .module-name.decorative i {
      display: inline-block;
      vertical-align: middle;
      width: 95px;
      height: 2px;
      background: rgba(0, 0, 0, 0.7);
      margin-right: 20px;
    }
    .module-name.decorative span {
      display: inline-block;
      vertical-align: middle;
      font-size: 30px;
    }
    .sticker-new {
      background: url("http://keenthemes.com/assets/bootsnipp/new.png") no-repeat;
      left: auto;
    }
    .sticker {
      position: absolute;
      top: 0;
      right: 15px;
      width: 63px;
      height: 63px;
    }

  </style>
</head>

<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel" style="padding-left:0px;padding-right:0px;">
  <!-- Overlay -->
  <div class="overlay"></div>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#bs-carousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item slides active">
      <div class="slide-1"></div>
      <div class="hero">
        <hgroup>
          <h1>cross the city</h1><br>
          <h2>
            <i class="fa fa-bicycle" aria-hidden="true"></i>by bike
          </h2>
        </hgroup>
        <button class="btn btn-hero btn-lg" role="button"><a href="http://google.com">road bike</a></button>
        <!-- <a class="btn btn-hero btn-lg" href="http://google.com">Test</a> -->
        <%#= link_to "road bike", products_path, class: "btn btn-hero btn-lg" %>
      </div>
    </div>

    <div class="item slides">
      <div class="slide-2"></div>
      <div class="hero">
        <hgroup>
          <h1>cross the mountain</h1>
          <h2>
            <i class="fa fa-bicycle" aria-hidden="true"></i>by bike
          </h2>
        </hgroup>
        <button class="btn btn-hero btn-lg" role="button">mauntain bike</button>
      </div>
    </div>
  </div>
</div>

